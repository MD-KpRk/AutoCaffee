<Window x:Class="AutoCaffee.Windows.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoCaffee.Windows"
        mc:Ignorable="d"
        Title="AuthWindow" Height="450" Width="800" MinHeight="320" MinWidth="360"
        FontFamily ="{StaticResource Roboto}">
        

    <Grid Background="WhiteSmoke">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="1" Grid.Row="1">
            <Border Background="#FFF9F9F9" MinHeight="260" MinWidth="320" CornerRadius="6" >
                <Border.Effect>
                    <DropShadowEffect Color="#FFE0E0E0" BlurRadius="10" />
                </Border.Effect>

            </Border>
            <StackPanel Margin="10,5" >
                <!-- Крутой аттрибут TextOptions.TextFormattingMode="Display" для округления высоты/ширины-->
                <Label Content="Авторизация" MinHeight="40" FontSize="24" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                
                <TextBlock FontSize="16" Text="Имя" />
                <TextBox/>
                <TextBlock FontSize="16" Text="Номер телефона" />
                <TextBox/>
                <TextBlock FontSize="16" Text="Пароль" />
                <TextBox/>

            </StackPanel>
        </Grid>
        
    </Grid>
</Window>

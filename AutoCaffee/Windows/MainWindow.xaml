    </Window.Resources>

    <DockPanel Background="WhiteSmoke" LastChildFill="True">
        <DockPanel x:Name="TopPanel" DockPanel.Dock="Top">
            <Button x:Name="HamButton" Style="{StaticResource b3}"  FontFamily="Segoe MDL2 Assets" FontSize="20" Content="&#xE700;" DockPanel.Dock="Left" MinHeight="40" MinWidth="40" Click="HamButton_Click"/>
            <Border Background="Gainsboro">
                <Label Content="Система управления рестораном" Margin="20,0,0,0" VerticalAlignment="Center" FontSize="20"/>
            </Border>
        </DockPanel>
        <Grid x:Name="MainGrid">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="MenuColumn" Width="40"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Background="#FF273038" Grid.Column="0">

                </StackPanel>
            </Grid>
            <Grid x:Name="ContentGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <!-- All content here-->
            </Grid>
        </Grid>
    </DockPanel>

<Page x:Class="AutoCaffee.Pages.HamRole"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AutoCaffee.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HamRole">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition x:Name="ContextMenu"  Width="200"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
        </Grid.RowDefinitions>

        <DataGrid Grid.Column="0" BorderBrush="#FF5F5F5F" />

        <Grid Grid.Column="1" Margin="1">
            <Border Background="White">
                <Border.Effect>
                    <DropShadowEffect Direction="180" RenderingBias="Performance" BlurRadius="5" ShadowDepth="1" Opacity="0.6"/>
                </Border.Effect>
            </Border>
            <Grid>

            </Grid>
        </Grid>

    </Grid>
</Page>
